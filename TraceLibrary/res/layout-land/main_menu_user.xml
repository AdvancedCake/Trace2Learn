<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HorizontalLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center_vertical" >
        
	    <TextView
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/user_app_name"
	        android:textColor="@color/header"
	        android:textSize="25sp"
	        android:textStyle="bold" />
	
	    <ImageView
	        android:id="@+id/logo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/title"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="30dp"
	        android:contentDescription="@string/user_app_name"
	        android:src="@drawable/logo" />
	
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center_vertical" >
	    
	    <ImageView
	        android:id="@+id/introduction"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@+id/logo"
	        android:layout_centerHorizontal="true"
	        android:contentDescription="@string/introduction"
	        android:src="@drawable/menu_button_introduction" />
	
	    <ImageView
	        android:id="@+id/browse_collections"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@+id/introduction"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:contentDescription="@string/browse_collections"
	        android:src="@drawable/menu_button_browse_collections" />
	
	    <ImageView
	        android:id="@+id/create_phrase"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@+id/browse_collections"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:contentDescription="@string/create_phrase"
	        android:src="@drawable/menu_button_build_phrase" />
	
	    <ImageView
	        android:id="@+id/upgrade"
	        android:layout_width="wrap_content"
	        android:layout_height="40dp"
	        android:layout_below="@+id/create_phrase"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:contentDescription="@string/upgrade_app"
	        android:visibility="gone"
	        android:src="@drawable/menu_button_upgrade" />

	</RelativeLayout>
	    
</LinearLayout>