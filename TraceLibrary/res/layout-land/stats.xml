<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statsLayoutLandscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/statLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/stats"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/header"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/exit_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/exit"
        android:src="@drawable/exit_button" />

    <RelativeLayout
        android:id="@+id/statsLayoutHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statLabel" >

        <TableLayout
            android:id="@+id/statsTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="15dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/statsCollections"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/header" />

                <TextView
                    android:id="@+id/countCollections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/statsPhrases"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/header" />

                <TextView
                    android:id="@+id/countPhrases"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/TextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/statsCharacters"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/header" />

                <TextView
                    android:id="@+id/countCharacters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/TextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/lifetimeScore"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/header" />

                <TextView
                    android:id="@+id/lifetimeScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>
        </TableLayout>
        
            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignRight="@id/statsTable"
                android:layout_below="@id/statsTable"
                android:text="@string/reset_score" />

        <RelativeLayout
            android:id="@+id/chartBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/statsTable" >

            <TextView
                android:id="@+id/chartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/chartLabel"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/header"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/chartLabel"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>