<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textColor="@color/header"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="@string/app_subtitle"
        android:textColor="@color/header"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/introduction"
        android:src="@drawable/menu_button_introduction" />

    <ImageView
        android:id="@+id/create_phrase"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/introduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/create_phrase"
        android:src="@drawable/menu_button_build_phrase" />

    <ImageView
        android:id="@+id/browse_collections"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/create_phrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/browse_collections"
        android:src="@drawable/menu_button_browse_collections" />

</RelativeLayout>